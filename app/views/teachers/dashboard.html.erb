<h1>User#dashboard</h1>

<div class="card-booking">
  <h3> Your bookings </h3>
  <div class="dash-holder">
    <% @bookings.each do |booking| %>
    <div class="card-dash">
      <h3><%= booking.teacher.user.first_name %> <%= booking.teacher.user.last_name %></h3>
      <%#= cl_image_tag booking.teacher.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="dates">
          <p> <strong>Start Date: </strong> <%= booking.start_time %></p>
          <p> <strong>End Date: </strong> <%= booking.end_time %></p>
      </div>
      <div class="dash-buttons">
        <%= link_to "Edit" , edit_booking_path(booking), class:"card-btn" %>
        <%= link_to "Delete" , booking_path(booking), method: :delete, class:"card-btn" %>
      </div>
      <br>
      <% end %>
  </div>
</div>
<%= link_to "Home Page" , teachers_path, class:"card-solid" %>
</div>
