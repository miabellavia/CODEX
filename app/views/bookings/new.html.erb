<h1>New booking</h1>

 <%= simple_form_for([@teacher, @booking]) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_time %>
      <%= f.input :end_time %>
    </div>

    <div class="form-actions">
      <%= f.submit %>
    </div>
  <% end %>
